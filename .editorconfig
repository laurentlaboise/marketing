# EditorConfig: http://editorconfig.org
# Top-level configuration for WordsThatSells.website to ensure consistent formatting
root = true

# Global settings for all files
[*]
# Use UTF-8 encoding for universal compatibility
charset = utf-8
# Use LF line endings for cross-platform consistency
end_of_line = lf
# Ensure a single newline at file end for clean diffs
insert_final_newline = true
# Remove trailing whitespace for cleaner code
trim_trailing_whitespace = true
# Enforce 120-character line length for readability
max_line_length = 120

# HTML files: 2-space indentation for clean, SEO-friendly markup
[*.{html,htm}]
indent_style = space
indent_size = 2

# CSS files: 2-space indentation for styling consistency
[*.css]
indent_style = space
indent_size = 2

# JavaScript and JSON files: 2-space indentation for modern JS development
[*.{js,json}]
indent_style = space
indent_size = 2

# Markdown files: Preserve trailing whitespace for syntax, no line length limit
[*.{md,markdown}]
trim_trailing_whitespace = false
max_line_length = off

# YAML files (e.g., CI/CD workflows): 2-space indentation for configuration
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# XML files (e.g., sitemap.xml, schema.json): 2-space indentation for SEO
[*.{xml,json}]
indent_style = space
indent_size = 2

# Configuration files: 2-space indentation for JSON-based configs
[{package.json,.eslintrc,.prettierrc,manifest.json,schema.json}]
indent_style = space
indent_size = 2

# Webpack configuration: 2-space indentation for JavaScript config
[webpack.config.js]
indent_style = space
indent_size = 2

# Environment files: No final newline for security, no trailing whitespace
[*.env]
trim_trailing_whitespace = true
insert_final_newline = false

# Lockfiles: Prevent accidental edits
[package-lock.json]
trim_trailing_whitespace = false
insert_final_newline = false

# Git-related files: Preserve whitespace, 2-space indentation
[*.{gitignore,gitattributes}]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false

# Apache configuration (.htaccess): No trailing whitespace for server stability
[.htaccess]
trim_trailing_whitespace = true
insert_final_newline = true

# Robots.txt: No trailing whitespace for clean SEO configuration
[robots.txt]
trim_trailing_whitespace = true
insert_final_newline = true

# Font-related files: No specific formatting to preserve binary or external formats
[fonts/**]
charset = unset
end_of_line = unset
indent_style = unset
indent_size = unset
trim_trailing_whitespace = false
insert_final_newline = false

# Image files (e.g., favicon.ico): No formatting to preserve binary integrity
[*.{ico,png,jpg,jpeg,svg}]
charset = unset
end_of_line = unset
indent_style = unset
indent_size = unset
trim_trailing_whitespace = false
insert_final_newline = false

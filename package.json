{
  "name": "wordsthatsells-website",
  "version": "1.0.0",
  "description": "The official website for Words That Sells, a pioneering AI-powered digital marketing agency based in Vientiane, Laos. Specializing in SEO, content creation, social media management, web development, and business automation across the dynamic Southeast Asian market.",
  "author": "Laboise Ltd and Laboise eworker laos enterprise",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/wordsthatsells/website.git"
  },
  "keywords": [
    "AI Marketing",
    "Digital Marketing",
    "SEO",
    "Content Creation",
    "Social Media Management",
    "Web Development",
    "PWA",
    "Laos",
    "Southeast Asia",
    "AI Tools"
  ],
  "homepage": "https://wordsthatsells.website",
  "bugs": {
    "url": "https://github.com/wordsthatsells/website/issues"
  },
  "main": "dist/index.html",
  "scripts": {
    "start": "gulp",
    "build": "NODE_ENV=production gulp build",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cypress": "cypress run",
    "test:cypress:open": "cypress open",
    "lint": "eslint \"{js,en,lo,th,fr}/**/*.js\"",
    "format": "prettier --write \"**/*.{html,css,js,json,md}\"",
    "deploy": "gulp build && npx netlify deploy --prod --dir=dist",
    "analyze": "webpack --config webpack.config.js --env analyze && webpack-bundle-analyzer dist/bundle-stats.json",
    "optimize": "gulp images && gulp css && gulp js",
    "validate-schema": "npx schema-org-validator schema.json"
  },
  "dependencies": {
    "axios": "^1.7.2",
    "lodash": "^4.17.21",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@babel/core": "^7.24.7",
    "@babel/preset-env": "^7.24.7",
    "@testing-library/jest-dom": "^6.4.6",
    "@testing-library/react": "^16.0.0",
    "autoprefixer": "^10.4.19",
    "babel-loader": "^9.1.3",
    "browser-sync": "^3.0.2",
    "core-js": "^3.37.1",
    "critical": "^6.0.4",
    "css-loader": "^7.1.2",
    "cssnano": "^7.0.3",
    "cypress": "^13.11.0",
    "del": "^7.1.0",
    "eslint": "^9.5.0",
    "eslint-plugin-jsdoc": "^48.2.8",
    "eslint-plugin-jsx-a11y": "^6.9.0",
    "eslint-plugin-react": "^7.34.3",
    "eslint-plugin-react-hooks": "^4.6.2",
    "file-loader": "^6.2.0",
    "gulp": "^5.0.0",
    "gulp-babel": "^8.0.0",
    "gulp-eslint": "^6.0.0",
    "gulp-htmlmin": "^5.0.1",
    "gulp-imagemin": "^9.1.0",
    "gulp-plumber": "^1.2.1",
    "gulp-postcss": "^10.0.0",
    "gulp-prettier": "^6.0.0",
    "gulp-rename": "^2.0.0",
    "gulp-sass": "^5.1.0",
    "gulp-sitemap": "^8.0.0",
    "gulp-sourcemaps": "^3.0.0",
    "gulp-uglify": "^3.0.2",
    "gulp-webp": "^5.0.0",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lint-staged": "^15.2.7",
    "mini-css-extract-plugin": "^2.9.0",
    "postcss": "^8.4.38",
    "prettier": "^3.3.2",
    "prettier-plugin-tailwindcss": "^0.6.5",
    "sass": "^1.77.6",
    "schema-org-validator": "^1.1.0",
    "style-loader": "^4.0.0",
    "tailwindcss": "^3.4.4",
    "webpack": "^5.93.0",
    "webpack-bundle-analyzer": "^4.10.2",
    "webpack-cli": "^5.1.4",
    "workbox-build": "^7.1.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "browserslist": [
    "last 2 versions",
    "> 1%",
    "not dead",
    "Firefox ESR",
    "Opera 12.1"
  ],
  "eslintConfig": {
    "extends": "./.eslintrc.json"
  },
  "prettier": "./.prettierrc",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{html,css,scss,json,md}": [
      "prettier --write"
    ]
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": [
      "<rootDir>/jest.setup.js"
    ],
    "moduleNameMapper": {
      "\\.(css|less|scss)$": "identity-obj-proxy"
    }
  }
}


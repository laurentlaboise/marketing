<%- include('../../partials/head', { title, bodyClass: 'dashboard-layout' }) %>
<%- include('../../partials/sidebar', { currentPage, user }) %>

<main class="main-content">
  <%- include('../../partials/header', { user, messages }) %>

  <div class="page-content">
    <div class="page-header">
      <div>
        <h1 class="page-title"><%= automation ? 'Edit Automation' : 'New Automation' %></h1>
        <p class="page-subtitle"><a href="/business/automations"><i class="fas fa-arrow-left"></i> Back</a></p>
      </div>
    </div>

    <div class="card form-card">
      <div class="card-body">
        <form action="<%= automation ? '/business/automations/' + automation.id : '/business/automations' %>" method="POST">
          <div class="form-group">
            <label class="form-label" for="name">Automation Name *</label>
            <input type="text" id="name" name="name" class="form-input" value="<%= automation ? automation.name : '' %>" required>
          </div>

          <div class="form-group">
            <label class="form-label" for="description">Description</label>
            <textarea id="description" name="description" class="form-input" rows="3"><%= automation ? automation.description : '' %></textarea>
          </div>

          <div class="form-row">
            <div class="form-group">
              <label class="form-label" for="trigger_type">Trigger Type</label>
              <select id="trigger_type" name="trigger_type" class="form-input">
                <option value="">Select trigger</option>
                <option value="schedule" <%= automation && automation.trigger_type === 'schedule' ? 'selected' : '' %>>Schedule</option>
                <option value="webhook" <%= automation && automation.trigger_type === 'webhook' ? 'selected' : '' %>>Webhook</option>
                <option value="event" <%= automation && automation.trigger_type === 'event' ? 'selected' : '' %>>Event</option>
              </select>
            </div>
            <div class="form-group">
              <label class="form-label" for="action_type">Action Type</label>
              <select id="action_type" name="action_type" class="form-input">
                <option value="">Select action</option>
                <option value="email" <%= automation && automation.action_type === 'email' ? 'selected' : '' %>>Send Email</option>
                <option value="webhook" <%= automation && automation.action_type === 'webhook' ? 'selected' : '' %>>Call Webhook</option>
                <option value="social" <%= automation && automation.action_type === 'social' ? 'selected' : '' %>>Post to Social</option>
              </select>
            </div>
          </div>

          <div class="form-group">
            <label class="form-label" for="status">Status</label>
            <select id="status" name="status" class="form-input">
              <option value="inactive" <%= !automation || automation.status === 'inactive' ? 'selected' : '' %>>Inactive</option>
              <option value="active" <%= automation && automation.status === 'active' ? 'selected' : '' %>>Active</option>
            </select>
          </div>

          <div class="form-actions">
            <a href="/business/automations" class="btn btn-secondary">Cancel</a>
            <button type="submit" class="btn btn-primary"><i class="fas fa-save"></i> Save</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</main>

<%- include('../../partials/footer') %>

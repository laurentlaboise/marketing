<%- include('../../partials/head', { title, bodyClass: 'dashboard-layout' }) %>
<%- include('../../partials/sidebar', { currentPage, user }) %>

<main class="main-content">
  <%- include('../../partials/header', { user, messages }) %>

  <div class="page-content">
    <div class="page-header">
      <div>
        <h1 class="page-title">Sidebar Management</h1>
        <p class="page-subtitle">Manage floating sidebar panels for any page on the website</p>
      </div>
      <div class="page-actions">
        <a href="/business/sidebar/new" class="btn btn-primary"><i class="fas fa-plus"></i> Add Sidebar</a>
      </div>
    </div>

    <% const sectionNames = Object.keys(sections); %>
    <% if (sectionNames.length > 0) { %>
      <% sectionNames.forEach(sectionName => { %>
      <div class="card" style="margin-bottom: 1.5rem;">
        <div class="card-body">
          <h3 style="margin-bottom: 1rem; text-transform: capitalize; color: var(--text-primary, #1a1a2e);">
            <i class="fas <%= sectionName === 'page-sidebar' ? 'fa-window-restore' : 'fa-layer-group' %>"></i> <%= sectionName %>
          </h3>
          <div class="table-container">
            <table class="table">
              <thead>
                <tr>
                  <th style="width:40px;">#</th>
                  <th>Label</th>
                  <th>Target Page</th>
                  <th>Button</th>
                  <th>Visible</th>
                  <th>Content</th>
                  <th>Actions</th>
                </tr>
              </thead>
              <tbody>
                <% sections[sectionName].forEach(item => { %>
                <tr style="<%= !item.is_visible ? 'opacity: 0.5;' : '' %>">
                  <td style="color: #999;"><%= item.sort_order %></td>
                  <td>
                    <i class="<%= item.icon_class %>" style="margin-right: 0.5rem; color: var(--primary-color, #667eea);"></i>
                    <strong><%= item.label %></strong>
                  </td>
                  <td>
                    <% if (item.page_url) { %>
                    <code style="background:#f1f5f9;padding:0.2rem 0.5rem;border-radius:4px;font-size:0.8rem;"><%= item.page_url %></code>
                    <% } else { %>
                    <small style="color: #999;">-</small>
                    <% } %>
                  </td>
                  <td>
                    <% if (item.button_label) { %>
                    <span style="display:inline-flex;align-items:center;gap:4px;background:#d62b83;color:#fff;padding:2px 8px;border-radius:4px;font-size:0.75rem;font-weight:600;">
                      <i class="<%= item.icon_class || 'fas fa-question-circle' %>" style="font-size:0.7rem;"></i> <%= item.button_label %>
                    </span>
                    <% } else { %>
                    <small style="color: #999;">-</small>
                    <% } %>
                  </td>
                  <td>
                    <% if (item.is_visible) { %>
                    <span class="status-badge active">Visible</span>
                    <% } else { %>
                    <span class="status-badge inactive">Hidden</span>
                    <% } %>
                  </td>
                  <td>
                    <% if (item.content_html) { %>
                    <span style="color:#10b981;font-size:0.85rem;"><i class="fas fa-check-circle"></i> Has content</span>
                    <% } else { %>
                    <small style="color: #999;">Empty</small>
                    <% } %>
                  </td>
                  <td>
                    <div class="table-actions">
                      <a href="/business/sidebar/<%= item.id %>/edit" class="btn btn-sm btn-secondary"><i class="fas fa-edit"></i></a>
                      <form action="/business/sidebar/<%= item.id %>/delete" method="POST" style="display: inline;">
                        <button type="submit" class="btn btn-sm btn-danger" data-confirm-delete><i class="fas fa-trash"></i></button>
                      </form>
                    </div>
                  </td>
                </tr>
                <% }); %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
      <% }); %>
    <% } else { %>
    <div class="card">
      <div class="card-body">
        <div class="empty-state">
          <div class="empty-state-icon"><i class="fas fa-window-restore"></i></div>
          <h3>No Sidebar Items</h3>
          <p>Create your first sidebar panel. It will appear as a floating button on the page you specify, opening a slide-in panel with your custom HTML content.</p>
          <a href="/business/sidebar/new" class="btn btn-primary"><i class="fas fa-plus"></i> Add Sidebar</a>
        </div>
      </div>
    </div>
    <% } %>
  </div>
</main>

<%- include('../../partials/footer') %>

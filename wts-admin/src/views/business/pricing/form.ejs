<%- include('../../partials/head', { title, bodyClass: 'dashboard-layout' }) %>
<%- include('../../partials/sidebar', { currentPage, user }) %>

<main class="main-content">
  <%- include('../../partials/header', { user, messages }) %>

  <div class="page-content">
    <div class="page-header">
      <div>
        <h1 class="page-title"><%= model ? 'Edit Pricing Package' : 'New Pricing Package' %></h1>
        <p class="page-subtitle"><a href="/business/pricing"><i class="fas fa-arrow-left"></i> Back to Packages</a></p>
      </div>
    </div>

    <form action="<%= model ? '/business/pricing/' + model.id : '/business/pricing' %>" method="POST">

      <!-- Basic Info -->
      <div class="card form-card" style="margin-bottom: 1.5rem;">
        <div class="card-header"><h3><i class="fas fa-tag"></i> Package Info</h3></div>
        <div class="card-body">
          <div class="form-row">
            <div class="form-group">
              <label class="form-label" for="name">Package Name *</label>
              <input type="text" id="name" name="name" class="form-input" value="<%= model ? model.name : '' %>" required>
            </div>
            <div class="form-group">
              <label class="form-label" for="slug">Slug</label>
              <input type="text" id="slug" name="slug" class="form-input" value="<%= model ? (model.slug || '') : '' %>" placeholder="auto-generated from name">
            </div>
          </div>

          <div class="form-group">
            <label class="form-label" for="description">Description</label>
            <textarea id="description" name="description" class="form-input" rows="2"><%= model ? (model.description || '') : '' %></textarea>
          </div>

          <div class="form-row">
            <div class="form-group">
              <label class="form-label" for="type">Type</label>
              <select id="type" name="type" class="form-input">
                <option value="">Select type</option>
                <option value="free" <%= model && model.type === 'free' ? 'selected' : '' %>>Free</option>
                <option value="starter" <%= model && model.type === 'starter' ? 'selected' : '' %>>Starter</option>
                <option value="professional" <%= model && model.type === 'professional' ? 'selected' : '' %>>Professional</option>
                <option value="enterprise" <%= model && model.type === 'enterprise' ? 'selected' : '' %>>Enterprise</option>
              </select>
            </div>
            <div class="form-group">
              <label class="form-label" for="status">Status</label>
              <select id="status" name="status" class="form-input">
                <option value="active" <%= !model || model.status === 'active' ? 'selected' : '' %>>Active</option>
                <option value="inactive" <%= model && model.status === 'inactive' ? 'selected' : '' %>>Inactive</option>
              </select>
            </div>
            <div class="form-group">
              <label class="form-label" for="sort_order">Sort Order</label>
              <input type="number" id="sort_order" name="sort_order" class="form-input" value="<%= model ? (model.sort_order || 0) : 0 %>">
            </div>
          </div>
        </div>
      </div>

      <!-- Pricing & Billing -->
      <div class="card form-card" style="margin-bottom: 1.5rem;">
        <div class="card-header"><h3><i class="fas fa-dollar-sign"></i> Pricing & Billing</h3></div>
        <div class="card-body">
          <div class="form-row">
            <div class="form-group">
              <label class="form-label" for="base_price">Monthly Price ($)</label>
              <input type="number" id="base_price" name="base_price" class="form-input" step="0.01" value="<%= model ? (model.base_price || '') : '' %>">
            </div>
            <div class="form-group">
              <label class="form-label" for="currency">Currency</label>
              <input type="text" id="currency" name="currency" class="form-input" value="<%= model ? (model.currency || 'USD') : 'USD' %>" maxlength="10">
            </div>
            <div class="form-group">
              <label class="form-label" for="billing_cycle">Default Billing Cycle</label>
              <select id="billing_cycle" name="billing_cycle" class="form-input">
                <option value="monthly" <%= !model || model.billing_cycle === 'monthly' ? 'selected' : '' %>>Monthly</option>
                <option value="yearly" <%= model && model.billing_cycle === 'yearly' ? 'selected' : '' %>>Yearly</option>
                <option value="one-time" <%= model && model.billing_cycle === 'one-time' ? 'selected' : '' %>>One-time</option>
              </select>
            </div>
          </div>
          <div class="form-row">
            <div class="form-group">
              <label class="form-label" for="annual_discount_pct">Annual Discount (%)</label>
              <input type="number" id="annual_discount_pct" name="annual_discount_pct" class="form-input" min="0" max="100" value="<%= model ? (model.annual_discount_pct != null ? model.annual_discount_pct : 20) : 20 %>">
              <small style="color:#666;">Percentage discount when billed annually</small>
            </div>
            <div class="form-group">
              <label class="form-label" for="trial_days">Trial Days</label>
              <input type="number" id="trial_days" name="trial_days" class="form-input" min="0" value="<%= model ? (model.trial_days || 0) : 0 %>">
            </div>
            <div class="form-group">
              <label class="form-label" for="pay_as_you_go_text">Pay-as-you-go Note</label>
              <input type="text" id="pay_as_you_go_text" name="pay_as_you_go_text" class="form-input" value="<%= model ? (model.pay_as_you_go_text || '') : '' %>" placeholder="e.g. * Pay as you go option">
            </div>
          </div>
        </div>
      </div>

      <!-- Appearance & CTA -->
      <div class="card form-card" style="margin-bottom: 1.5rem;">
        <div class="card-header"><h3><i class="fas fa-palette"></i> Appearance & CTA</h3></div>
        <div class="card-body">
          <div class="form-row">
            <div class="form-group">
              <label class="form-label">
                <input type="hidden" name="highlight" value="false">
                <input type="checkbox" name="highlight" value="true" <%= model && model.highlight ? 'checked' : '' %>>
                Highlight this package (featured/recommended)
              </label>
            </div>
            <div class="form-group">
              <label class="form-label" for="badge_text">Badge Text</label>
              <input type="text" id="badge_text" name="badge_text" class="form-input" value="<%= model ? (model.badge_text || '') : '' %>" placeholder="e.g. Most Popular">
            </div>
          </div>
          <div class="form-row">
            <div class="form-group">
              <label class="form-label" for="icon_class">Icon Class</label>
              <input type="text" id="icon_class" name="icon_class" class="form-input" value="<%= model ? (model.icon_class || '') : '' %>" placeholder="e.g. fas fa-rocket">
            </div>
            <div class="form-group">
              <label class="form-label" for="cta_text">CTA Button Text</label>
              <input type="text" id="cta_text" name="cta_text" class="form-input" value="<%= model ? (model.cta_text || 'Choose Plan') : 'Choose Plan' %>">
            </div>
            <div class="form-group">
              <label class="form-label" for="cta_url">CTA URL</label>
              <input type="text" id="cta_url" name="cta_url" class="form-input" value="<%= model ? (model.cta_url || '') : '' %>" placeholder="e.g. /en/checkout or #contact">
            </div>
          </div>
        </div>
      </div>

      <!-- Upsell -->
      <div class="card form-card" style="margin-bottom: 1.5rem;">
        <div class="card-header"><h3><i class="fas fa-arrow-up"></i> Upsell Strategy</h3></div>
        <div class="card-body">
          <div class="form-group">
            <label class="form-label" for="upsell_text">Hover Bubble Message</label>
            <input type="text" id="upsell_text" name="upsell_text" class="form-input" value="<%= model ? (model.upsell_text || '') : '' %>" placeholder="e.g. Upgrade to Professional for 3x the features!">
            <small style="color:#666;">This message appears in a tooltip bubble when users hover over this plan card. Leave empty to hide the bubble.</small>
          </div>
          <div class="form-group">
            <label class="form-label" for="upsell_target_id">Upsell Target Plan</label>
            <select id="upsell_target_id" name="upsell_target_id" class="form-input">
              <option value="">None</option>
              <% if (typeof allPlans !== 'undefined') { allPlans.forEach(function(plan) { %>
              <option value="<%= plan.id %>" <%= model && model.upsell_target_id === plan.id ? 'selected' : '' %>><%= plan.name %></option>
              <% }); } %>
            </select>
          </div>
        </div>
      </div>

      <!-- Stripe Integration -->
      <div class="card form-card" style="margin-bottom: 1.5rem;">
        <div class="card-header"><h3><i class="fab fa-stripe"></i> Stripe Integration</h3></div>
        <div class="card-body">
          <div class="form-row">
            <div class="form-group">
              <label class="form-label" for="stripe_price_id_monthly">Stripe Price ID (Monthly)</label>
              <input type="text" id="stripe_price_id_monthly" name="stripe_price_id_monthly" class="form-input" value="<%= model ? (model.stripe_price_id_monthly || '') : '' %>" placeholder="price_xxx">
            </div>
            <div class="form-group">
              <label class="form-label" for="stripe_price_id_yearly">Stripe Price ID (Yearly)</label>
              <input type="text" id="stripe_price_id_yearly" name="stripe_price_id_yearly" class="form-input" value="<%= model ? (model.stripe_price_id_yearly || '') : '' %>" placeholder="price_xxx">
            </div>
          </div>
        </div>
      </div>

      <!-- Feature Toggles -->
      <div class="card form-card" style="margin-bottom: 1.5rem;">
        <div class="card-header"><h3><i class="fas fa-list-check"></i> Included Features</h3></div>
        <div class="card-body">
          <% if (typeof allFeatures !== 'undefined' && allFeatures.length > 0) {
            var currentCategory = '';
            var modelFeatures = (model && model.features) ? (typeof model.features === 'string' ? JSON.parse(model.features) : model.features) : {};
            allFeatures.forEach(function(feature) {
              if (feature.category_name !== currentCategory) {
                currentCategory = feature.category_name;
          %>
          <h4 style="margin: 1rem 0 0.5rem; padding-top: 0.5rem; border-top: 1px solid #e5e7eb; color: #333;">
            <i class="<%= feature.category_icon %>" style="color: #667eea; margin-right: 0.5rem;"></i>
            <%= currentCategory %>
          </h4>
          <% } %>
          <div style="display: flex; align-items: center; margin-bottom: 0.5rem; padding: 0.25rem 0;">
            <input type="hidden" name="feature_<%= feature.feature_key %>" value="false">
            <label style="display: flex; align-items: center; cursor: pointer; gap: 0.5rem;">
              <input type="checkbox" name="feature_<%= feature.feature_key %>" value="true"
                <%= modelFeatures[feature.feature_key] ? 'checked' : '' %>>
              <strong><%= feature.feature_name %></strong>
              <% if (feature.feature_description) { %>
              <span style="color: #666; font-size: 0.85rem;">- <%= feature.feature_description %></span>
              <% } %>
            </label>
          </div>
          <% }); } else { %>
          <p style="color: #666;">No pricing features defined yet. <a href="/business/pricing-features/new">Create features</a> first to assign them to packages.</p>
          <% } %>
        </div>
      </div>

      <div class="form-actions">
        <a href="/business/pricing" class="btn btn-secondary">Cancel</a>
        <button type="submit" class="btn btn-primary"><i class="fas fa-save"></i> Save Package</button>
      </div>
    </form>
  </div>
</main>

<script>
  // Auto-generate slug from name
  var nameInput = document.getElementById('name');
  var slugInput = document.getElementById('slug');
  if (nameInput && slugInput) {
    nameInput.addEventListener('input', function() {
      if (!slugInput.dataset.manual) {
        slugInput.value = this.value.toLowerCase().replace(/[^a-z0-9]+/g, '-').replace(/(^-|-$)/g, '');
      }
    });
    slugInput.addEventListener('input', function() {
      this.dataset.manual = 'true';
    });
  }
</script>

<%- include('../../partials/footer') %>

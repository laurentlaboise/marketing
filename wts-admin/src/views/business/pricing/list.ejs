<%- include('../../partials/head', { title, bodyClass: 'dashboard-layout' }) %>
<%- include('../../partials/sidebar', { currentPage, user }) %>

<main class="main-content">
  <%- include('../../partials/header', { user, messages }) %>

  <div class="page-content">
    <div class="page-header">
      <div>
        <h1 class="page-title">Price Models</h1>
        <p class="page-subtitle">Manage pricing plans</p>
      </div>
      <div class="page-actions">
        <a href="/business/pricing/new" class="btn btn-primary"><i class="fas fa-plus"></i> Add Plan</a>
      </div>
    </div>

    <div class="card">
      <div class="card-body" style="padding: 0;">
        <% if (models.length > 0) { %>
        <div class="table-container">
          <table class="table">
            <thead>
              <tr>
                <th>Name</th>
                <th>Type</th>
                <th>Price</th>
                <th>Billing</th>
                <th>Status</th>
                <th>Actions</th>
              </tr>
            </thead>
            <tbody>
              <% models.forEach(model => { %>
              <tr>
                <td><strong><%= model.name %></strong></td>
                <td><%= model.type || '-' %></td>
                <td><%= model.base_price ? '$' + parseFloat(model.base_price).toFixed(2) : 'Free' %></td>
                <td><%= model.billing_cycle || '-' %></td>
                <td><span class="status-badge <%= model.status %>"><%= model.status %></span></td>
                <td>
                  <div class="table-actions">
                    <a href="/business/pricing/<%= model.id %>/edit" class="btn btn-sm btn-secondary"><i class="fas fa-edit"></i></a>
                    <form action="/business/pricing/<%= model.id %>/delete" method="POST" style="display: inline;">
                      <button type="submit" class="btn btn-sm btn-danger" data-confirm-delete><i class="fas fa-trash"></i></button>
                    </form>
                  </div>
                </td>
              </tr>
              <% }); %>
            </tbody>
          </table>
        </div>
        <% } else { %>
        <div class="empty-state">
          <div class="empty-state-icon"><i class="fas fa-tags"></i></div>
          <h3>No Price Models</h3>
          <p>Create pricing plans for your services.</p>
          <a href="/business/pricing/new" class="btn btn-primary"><i class="fas fa-plus"></i> Add Plan</a>
        </div>
        <% } %>
      </div>
    </div>
  </div>
</main>

<%- include('../../partials/footer') %>

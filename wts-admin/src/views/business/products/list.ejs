<%- include('../../partials/head', { title, bodyClass: 'dashboard-layout' }) %>
<%- include('../../partials/sidebar', { currentPage, user }) %>

<main class="main-content">
  <%- include('../../partials/header', { user, messages }) %>

  <div class="page-content">
    <div class="page-header">
      <div>
        <h1 class="page-title">Products</h1>
        <p class="page-subtitle">Manage products displayed on your service pages</p>
      </div>
      <div class="page-actions">
        <a href="/business/products/new" class="btn btn-primary"><i class="fas fa-plus"></i> Add Product</a>
      </div>
    </div>

    <!-- Filter Bar -->
    <div class="card" style="margin-bottom: 1rem;">
      <div class="card-body" style="padding: 0.75rem 1rem;">
        <form method="GET" action="/business/products" class="filter-form">
          <select name="service_page" class="form-input filter-input" style="padding: 0.4rem 0.6rem;">
            <option value="">All Service Pages</option>
            <option value="content-creation" <%= filter_service_page === 'content-creation' ? 'selected' : '' %>>Content Creation</option>
            <option value="social-media-management" <%= filter_service_page === 'social-media-management' ? 'selected' : '' %>>Social Media</option>
            <option value="web-development" <%= filter_service_page === 'web-development' ? 'selected' : '' %>>Web Development</option>
            <option value="business-tools" <%= filter_service_page === 'business-tools' ? 'selected' : '' %>>Business Tools</option>
          </select>
          <select name="status" class="form-input filter-select" style="padding: 0.4rem 0.6rem;">
            <option value="">All Statuses</option>
            <option value="active" <%= filter_status === 'active' ? 'selected' : '' %>>Active</option>
            <option value="inactive" <%= filter_status === 'inactive' ? 'selected' : '' %>>Inactive</option>
            <option value="draft" <%= filter_status === 'draft' ? 'selected' : '' %>>Draft</option>
          </select>
          <button type="submit" class="btn btn-secondary btn-sm"><i class="fas fa-filter"></i> Filter</button>
          <% if (filter_service_page || filter_status) { %>
          <a href="/business/products" class="btn btn-sm" style="color: #666;"><i class="fas fa-times"></i> Clear</a>
          <% } %>
        </form>
      </div>
    </div>

    <div class="card">
      <div class="card-body" style="padding: 0;">
        <% if (products.length > 0) { %>
        <div class="table-container">
          <table class="table table-responsive-cards">
            <thead>
              <tr>
                <th style="width:40px;">#</th>
                <th>Product</th>
                <th>Price</th>
                <th>Service Page</th>
                <th>Type</th>
                <th>Status</th>
                <th>Stripe</th>
                <th>Actions</th>
              </tr>
            </thead>
            <tbody>
              <% products.forEach((product, index) => { %>
              <tr>
                <td data-label="#" style="color: #999;"><%= product.sort_order || index %></td>
                <td data-label="Product">
                  <div style="display: flex; align-items: center; gap: 0.5rem;">
                    <i class="<%= product.icon_class || 'fas fa-box' %>" style="color: var(--primary-color, #667eea); font-size: 1.1rem;"></i>
                    <div>
                      <strong><%= product.name %></strong>
                      <% if (product.category) { %>
                      <br><small style="color: #888;"><%= product.category %></small>
                      <% } %>
                    </div>
                  </div>
                </td>
                <td data-label="Price"><%= product.price ? '$' + parseFloat(product.price).toFixed(2) : '-' %></td>
                <td data-label="Service Page">
                  <% if (product.service_page) { %>
                  <span class="status-badge active" style="font-size: 0.7rem;"><%= product.service_page %></span>
                  <% } else { %>
                  <span style="color: #999;">-</span>
                  <% } %>
                </td>
                <td data-label="Type"><span style="text-transform: capitalize; font-size: 0.85rem;"><%= product.product_type || 'service' %></span></td>
                <td data-label="Status"><span class="status-badge <%= product.status %>"><%= product.status %></span></td>
                <td data-label="Stripe">
                  <% if (product.stripe_price_id) { %>
                  <i class="fab fa-stripe" style="color: #635bff; font-size: 1.2rem;" title="Stripe connected"></i>
                  <% } else { %>
                  <span style="color: #ccc;">-</span>
                  <% } %>
                </td>
                <td data-label="Actions">
                  <div class="table-actions">
                    <a href="/business/products/<%= product.id %>/edit" class="btn btn-sm btn-secondary" title="Edit"><i class="fas fa-edit"></i></a>
                    <form action="/business/products/<%= product.id %>/delete" method="POST" style="display: inline;">
                      <button type="submit" class="btn btn-sm btn-danger" data-confirm-delete title="Delete"><i class="fas fa-trash"></i></button>
                    </form>
                  </div>
                </td>
              </tr>
              <% }); %>
            </tbody>
          </table>
        </div>
        <% } else { %>
        <div class="empty-state">
          <div class="empty-state-icon"><i class="fas fa-box"></i></div>
          <h3>No Products Found</h3>
          <p>Start adding products to display on your service pages.</p>
          <a href="/business/products/new" class="btn btn-primary"><i class="fas fa-plus"></i> Add Product</a>
        </div>
        <% } %>
      </div>
    </div>
  </div>
</main>

<%- include('../../partials/footer') %>

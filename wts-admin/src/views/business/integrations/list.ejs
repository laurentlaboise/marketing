<%- include('../../partials/head', { title, bodyClass: 'dashboard-layout' }) %>
<%- include('../../partials/sidebar', { currentPage, user }) %>

<main class="main-content">
  <%- include('../../partials/header', { user, messages }) %>

  <div class="page-content">
    <div class="page-header">
      <div>
        <h1 class="page-title">Integrations</h1>
        <p class="page-subtitle">Manage platform connections for your automations</p>
      </div>
      <div class="page-actions">
        <a href="/business/integrations/new" class="btn btn-primary"><i class="fas fa-plus"></i> Add Integration</a>
      </div>
    </div>

    <div class="card">
      <div class="card-body" style="padding: 0;">
        <% if (integrations.length > 0) { %>
        <div class="table-container">
          <table class="table table-responsive-cards">
            <thead>
              <tr>
                <th>Platform</th>
                <th>API Endpoint</th>
                <th>Workspace</th>
                <th>Rate Limits</th>
                <th>Actions</th>
              </tr>
            </thead>
            <tbody>
              <% integrations.forEach(function(integ) { %>
              <tr>
                <td data-label="Platform">
                  <div style="display: flex; align-items: center; gap: 0.5rem;">
                    <i class="fas fa-plug" style="color: var(--primary); font-size: 1.1rem;"></i>
                    <strong><%= integ.platform_name %></strong>
                  </div>
                </td>
                <td data-label="API Endpoint">
                  <% if (integ.api_endpoint) { %>
                  <code style="font-size: 12px; background: var(--gray-100); padding: 2px 6px; border-radius: 4px;"><%= integ.api_endpoint %></code>
                  <% } else { %>
                  <span style="color: #999;">-</span>
                  <% } %>
                </td>
                <td data-label="Workspace">
                  <span style="font-size: 12px; color: var(--gray-500);"><%= integ.workspace_id ? integ.workspace_id.substring(0, 8) + '...' : '-' %></span>
                </td>
                <td data-label="Rate Limits">
                  <% if (integ.rate_limits) { %>
                  <span style="font-size: 12px;"><%= typeof integ.rate_limits === 'object' ? JSON.stringify(integ.rate_limits) : integ.rate_limits %></span>
                  <% } else { %>
                  <span style="color: #999;">None</span>
                  <% } %>
                </td>
                <td data-label="Actions">
                  <div class="table-actions">
                    <a href="/business/integrations/<%= integ.id %>/edit" class="btn btn-sm btn-secondary" title="Edit"><i class="fas fa-edit"></i></a>
                    <form action="/business/integrations/<%= integ.id %>/delete" method="POST" style="display: inline;">
                      <button type="submit" class="btn btn-sm btn-danger" data-confirm-delete title="Delete"><i class="fas fa-trash"></i></button>
                    </form>
                  </div>
                </td>
              </tr>
              <% }); %>
            </tbody>
          </table>
        </div>
        <% } else { %>
        <div class="empty-state">
          <div class="empty-state-icon"><i class="fas fa-plug"></i></div>
          <h3>No Integrations Configured</h3>
          <p>Connect platforms like n8n, Make.com, Slack, or custom APIs to use in your automations.</p>
          <a href="/business/integrations/new" class="btn btn-primary"><i class="fas fa-plus"></i> Add Integration</a>
        </div>
        <% } %>
      </div>
    </div>
  </div>
</main>

<%- include('../../partials/footer') %>

<%- include('../../partials/head', { title, bodyClass: 'dashboard-layout' }) %>
<%- include('../../partials/sidebar', { currentPage, user }) %>

<main class="main-content">
  <%- include('../../partials/header', { user, messages }) %>

  <div class="page-content">
    <div class="page-header">
      <div>
        <h1 class="page-title">SEO Terms</h1>
        <p class="page-subtitle">Manage SEO terminology definitions. These terms are automatically detected and highlighted as clickable tooltips within articles.</p>
      </div>
      <div class="page-actions">
        <button type="button" class="btn btn-secondary" onclick="document.getElementById('importModal').style.display='flex'" title="Import from CSV"><i class="fas fa-upload"></i> Import</button>
        <a href="/content/seo-terms/new" class="btn btn-primary">
          <i class="fas fa-plus"></i> New Term
        </a>
      </div>
    </div>

    <div class="card">
      <div class="card-body" style="padding: 0;">
        <% if (terms.length > 0) { %>
        <div class="table-container">
          <table class="table">
            <thead>
              <tr>
                <th>Term</th>
                <th>Tooltip</th>
                <th>Category</th>
                <th>Links</th>
                <th>Created</th>
                <th>Actions</th>
              </tr>
            </thead>
            <tbody>
              <% terms.forEach(term => { %>
              <tr>
                <td><strong><%= term.term %></strong></td>
                <td style="max-width: 200px; overflow: hidden; text-overflow: ellipsis; white-space: nowrap; color: #6b7280; font-size: 0.85rem;"><%= term.short_definition || '-' %></td>
                <td><%= term.category || '-' %></td>
                <td>
                  <% if (term.article_link) { %><i class="fas fa-newspaper" title="Has article link" style="color: #1f85c9; margin-right: 4px;"></i><% } %>
                  <% if (term.glossary_link) { %><i class="fas fa-book-open" title="Has glossary link" style="color: #d62b83; margin-right: 4px;"></i><% } %>
                  <% if (term.video_url) { %><i class="fas fa-video" title="Has video" style="color: #25d366;"></i><% } %>
                  <% if (!term.article_link && !term.glossary_link && !term.video_url) { %>-<% } %>
                </td>
                <td><%= new Date(term.created_at).toLocaleDateString() %></td>
                <td>
                  <div class="table-actions">
                    <a href="/content/seo-terms/<%= term.id %>/edit" class="btn btn-sm btn-secondary"><i class="fas fa-edit"></i></a>
                    <form action="/content/seo-terms/<%= term.id %>/delete" method="POST" style="display: inline;">
                      <button type="submit" class="btn btn-sm btn-danger" data-confirm-delete><i class="fas fa-trash"></i></button>
                    </form>
                  </div>
                </td>
              </tr>
              <% }); %>
            </tbody>
          </table>
        </div>
        <% } else { %>
        <div class="empty-state">
          <div class="empty-state-icon"><i class="fas fa-search"></i></div>
          <h3>No SEO Terms Found</h3>
          <p>Start building your SEO terminology database. Terms you add here will be automatically detected in articles and displayed as clickable tooltips for readers.</p>
          <a href="/content/seo-terms/new" class="btn btn-primary"><i class="fas fa-plus"></i> Add Term</a>
        </div>
        <% } %>
      </div>
    </div>
  </div>
</main>

<!-- Import Modal -->
<div id="importModal" style="display:none; position:fixed; top:0; left:0; width:100%; height:100%; background:rgba(0,0,0,0.5); z-index:1000; align-items:center; justify-content:center;">
  <div class="card" style="max-width:500px; width:90%; margin:auto;">
    <div class="card-body">
      <div style="display:flex; justify-content:space-between; align-items:center; margin-bottom:1.5rem;">
        <h3 style="margin:0;"><i class="fas fa-upload"></i> Import SEO Terms</h3>
        <button type="button" onclick="document.getElementById('importModal').style.display='none'" aria-label="Close import dialog" style="background:none; border:none; font-size:1.25rem; cursor:pointer; color:var(--gray-500);">&times;</button>
      </div>
      <form action="/content/seo-terms/import" method="POST" enctype="multipart/form-data" id="importForm">
        <div class="form-group">
          <label class="form-label" for="importFile">CSV File</label>
          <input type="file" id="importFile" name="file" class="form-input" accept=".csv" required>
          <p class="form-help">Upload a CSV file exported from Google Sheets. Required columns: <strong>Term</strong>, <strong>Definition</strong>. Optional: Short Definition, Category, Related Terms, Examples, Bullets (semicolon-separated), Video URL, Featured Image, Article Link, Glossary Link.</p>
        </div>
        <div class="form-actions" style="margin-top:1rem;">
          <button type="button" class="btn btn-secondary" onclick="document.getElementById('importModal').style.display='none'">Cancel</button>
          <button type="submit" class="btn btn-primary" id="importBtn"><i class="fas fa-upload"></i> Upload & Import</button>
        </div>
      </form>
    </div>
  </div>
</div>

<script>
  // Close modal on background click
  document.getElementById('importModal').addEventListener('click', function(e) {
    if (e.target === this) this.style.display = 'none';
  });
  // Close modal on Escape key
  document.addEventListener('keydown', function(e) {
    if (e.key === 'Escape') document.getElementById('importModal').style.display = 'none';
  });
  // Show loading state on submit
  document.getElementById('importForm').addEventListener('submit', function() {
    var btn = document.getElementById('importBtn');
    btn.disabled = true;
    btn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Importing...';
  });
</script>

<%- include('../../partials/footer') %>

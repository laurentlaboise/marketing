<%- include('../../partials/head', { title, bodyClass: 'dashboard-layout' }) %>

<%- include('../../partials/sidebar', { currentPage, user }) %>

<main class="main-content">
  <%- include('../../partials/header', { user, messages }) %>

  <div class="page-content">
    <div class="page-header">
      <div>
        <h1 class="page-title">Articles</h1>
        <p class="page-subtitle">Manage your blog articles</p>
      </div>
      <div class="page-actions">
        <a href="/content/articles/new" class="btn btn-primary">
          <i class="fas fa-plus"></i> New Article
        </a>
      </div>
    </div>

    <div class="card">
      <div class="card-header">
        <form action="/content/articles" method="GET" style="display: flex; gap: 12px; flex-wrap: wrap;">
          <input type="text" name="search" class="form-input" placeholder="Search articles..." value="<%= pagination.search || '' %>" style="width: 200px;">
          <select name="status" class="form-input" style="width: 150px;">
            <option value="">All Status</option>
            <option value="draft" <%= pagination.status === 'draft' ? 'selected' : '' %>>Draft</option>
            <option value="published" <%= pagination.status === 'published' ? 'selected' : '' %>>Published</option>
          </select>
          <button type="submit" class="btn btn-secondary btn-sm">
            <i class="fas fa-search"></i> Search
          </button>
        </form>
      </div>
      <div class="card-body" style="padding: 0;">
        <% if (articles.length > 0) { %>
        <div class="table-container">
          <table class="table">
            <thead>
              <tr>
                <th>Title</th>
                <th>Category</th>
                <th>Status</th>
                <th>Created</th>
                <th>Actions</th>
              </tr>
            </thead>
            <tbody>
              <% articles.forEach(article => { %>
              <tr>
                <td>
                  <strong><%= article.title %></strong>
                  <br>
                  <small style="color: var(--gray-500);">/<%= article.slug %></small>
                </td>
                <td><%= article.category || '-' %></td>
                <td>
                  <span class="status-badge <%= article.status %>"><%= article.status %></span>
                </td>
                <td><%= new Date(article.created_at).toLocaleDateString() %></td>
                <td>
                  <div class="table-actions">
                    <a href="/content/articles/<%= article.id %>/edit" class="btn btn-sm btn-secondary" title="Edit">
                      <i class="fas fa-edit"></i>
                    </a>
                    <form action="/content/articles/<%= article.id %>/delete" method="POST" style="display: inline;">
                      <button type="submit" class="btn btn-sm btn-danger" title="Delete" data-confirm-delete="Are you sure you want to delete this article?">
                        <i class="fas fa-trash"></i>
                      </button>
                    </form>
                  </div>
                </td>
              </tr>
              <% }); %>
            </tbody>
          </table>
        </div>

        <% if (pagination.totalPages > 1) { %>
        <div class="card-footer">
          <div class="pagination">
            <% if (pagination.page > 1) { %>
            <a href="?page=<%= pagination.page - 1 %>&search=<%= pagination.search || '' %>&status=<%= pagination.status || '' %>" class="pagination-btn">
              <i class="fas fa-chevron-left"></i>
            </a>
            <% } %>

            <% for (let i = 1; i <= pagination.totalPages; i++) { %>
            <a href="?page=<%= i %>&search=<%= pagination.search || '' %>&status=<%= pagination.status || '' %>" class="pagination-btn <%= i === pagination.page ? 'active' : '' %>">
              <%= i %>
            </a>
            <% } %>

            <% if (pagination.page < pagination.totalPages) { %>
            <a href="?page=<%= pagination.page + 1 %>&search=<%= pagination.search || '' %>&status=<%= pagination.status || '' %>" class="pagination-btn">
              <i class="fas fa-chevron-right"></i>
            </a>
            <% } %>
          </div>
        </div>
        <% } %>
        <% } else { %>
        <div class="empty-state">
          <div class="empty-state-icon">
            <i class="fas fa-newspaper"></i>
          </div>
          <h3>No Articles Found</h3>
          <p>Get started by creating your first article.</p>
          <a href="/content/articles/new" class="btn btn-primary">
            <i class="fas fa-plus"></i> Create Article
          </a>
        </div>
        <% } %>
      </div>
    </div>
  </div>
</main>

<%- include('../../partials/footer') %>
